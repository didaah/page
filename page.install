      ),
      'weight' => array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
        'description' => '排序',
      ),
      'uid' => array(
        'type' => 'int',
        'not null' => TRUE,
