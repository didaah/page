    'indexes' => array(
      'tc' => array('type', 'created'),
      'tu' => array('type', 'updated'),
      'twc' => array('type', 'weight', 'created'),
      'tuid' => array('type', 'uid'),
    ),
    'primary key' => array('pid'),
  );
   
  $schema['pages_lang'] = array(
